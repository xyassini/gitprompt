{
  "name": "gitprompt",
  "version": "1.3.0",
  "description": "AI-powered git assistant that intelligently groups and commits changes with smart prompts",
  "keywords": [
    "git",
    "ai",
    "cli",
    "commit",
    "automation",
    "gpt",
    "conventional-commits"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xyassini/gitprompt.git"
  },
  "homepage": "https://github.com/xyassini/gitprompt#readme",
  "bugs": {
    "url": "https://github.com/xyassini/gitprompt/issues"
  },
  "author": "Yassine Zeriouh <git@zeriouh.io>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "gitprompt": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "semantic-release": "^22.0.12"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "ai": "^4.3.16",
    "isomorphic-git": "^1.30.2",
    "yargs": "^17.7.2",
    "yoctocolors": "^2.1.1"
  }
